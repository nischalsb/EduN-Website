{
  "name": "educate-nepal-backend",
  "version": "1.0.0",
  "description": "AWS Lambda backend for Educate Nepal Initiative",
  "main": "src/index.ts",
  "scripts": {
    "build": "esbuild --bundle --platform=node --target=node18 --outdir=dist src/*.ts",
    "build:watch": "npm run build -- --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "sam deploy --guided",
    "local": "sam local start-api --env-vars env.json",
    "lint": "eslint 'src/**/*.ts'"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.888.0",
    "@aws-sdk/client-ses": "^3.888.0",
    "@aws-sdk/lib-dynamodb": "^3.888.0",
    "@middy/core": "^3.6.0",
    "@middy/http-error-handler": "^3.6.0",
    "@middy/http-json-body-parser": "^3.6.0",
    "axios": "^1.12.2",
    "crypto-js": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.15",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "aws-sdk-mock": "^5.8.0",
    "esbuild": "^0.19.8",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "author": "Educate Nepal Initiative",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
